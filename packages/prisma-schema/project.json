{
  "name": "prisma-schema",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/prisma-schema/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project prisma-schema --web",
  "targets": {
    "prisma": {
      "command": "prisma",
      "options": {
        "cwd": "packages/prisma-schema"
      }
    },
    "generate-types": {
      "command": "prisma generate",
      "options": {
        "cwd": "packages/prisma-schema"
      }
    },
    "migrate": {
      "command": "prisma migrate dev",
      "options": {
        "cwd": "packages/prisma-schema"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/prisma-schema/**/*.ts"
        ]
      }
    }
  }
}